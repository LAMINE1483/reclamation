{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}
{% block body %}
    <h1><u>Reclamation n° {{ reclamation.id }} venant de {{ reclamation.user.prenom }} {{ reclamation.user.nom }}</u></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ reclamation.objet }}</td>
            </tr>
            <tr>
                <th>Corps</th>
                <td>{{ reclamation.corps }}</td>
            </tr>
             <tr>
                <th>Semestre</th>
                <td>{{ reclamation.semestre }}</td>
            </tr>
             <tr>
                <th>Matiere</th>
                <td>{{ reclamation.matiere }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ reclamation.DateCreation ? reclamation.DateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
                 <tr>
                     <th>PRENOM</th>
                     <td>{{ reclamation.user.prenom }}</td>
                 </tr>
                 <tr>
                     <th>NOM</th>
                     <td>{{ reclamation.user.nom }}</td>
                 </tr>
                 {% endif %}
        </tbody>
    </table>

    <a href="{{ path('reclamation_index') }}" <button type="button" class="btn btn-info"></button>retour à la liste</a>
     {% if is_granted('ROLE_ETUDIANT') %}
       <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" <button type="button" class="btn btn-primary"></button>Editer</a>
       {% endif %}
    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
